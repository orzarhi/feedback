generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SurveyType {
  MULTIPLE_CHOICE
  SHORT_ANSWER
  CHECKBOX
}

model User {
  id    String @id @default(cuid())
  email String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Survey    Survey[]
}

model Survey {
  id          String     @id @default(cuid())
  title       String
  description String?
  type        SurveyType

  questions Question[]
  user      User       @relation(fields: [userId], references: [id])
  userId    String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Question {
  id       String   @id @default(cuid())
  text     String
  survey   Survey   @relation(fields: [surveyId], references: [id])
  surveyId String
  Answer   Answer[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Answer {
  id         String   @id @default(cuid())
  question   Question @relation(fields: [questionId], references: [id])
  questionId String
  text       String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
